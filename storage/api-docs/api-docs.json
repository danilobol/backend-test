{
    "openapi": "3.0.0",
    "info": {
        "title": "Challenge-Backend",
        "contact": {
            "name": "Danilo Brito",
            "email": "danilo.britoxd@hotmail.com"
        },
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8100"
        }
    ],
    "paths": {
        "/api/investment/create": {
            "post": {
                "tags": [
                    "Investment"
                ],
                "summary": "Create new investment",
                "operationId": "createInvestment",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Investimentos BB"
                                    },
                                    "date_investment": {
                                        "type": "string",
                                        "example": "2021-12-16 06:51:44"
                                    },
                                    "amount": {
                                        "type": "number",
                                        "example": "3000.00"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/investment/show": {
            "get": {
                "tags": [
                    "Investment"
                ],
                "summary": "show investment by id!",
                "operationId": "showInvestment",
                "parameters": [
                    {
                        "name": "investmentId",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        },
        "/api/investment/my-investment-show": {
            "get": {
                "tags": [
                    "Investment"
                ],
                "summary": "show my investments",
                "operationId": "getOwnerInvestment",
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/transaction/new": {
            "post": {
                "tags": [
                    "Transaction"
                ],
                "summary": "Create a new transaction",
                "operationId": "createANewTransaction",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "type": {
                                        "description": "types: invest / withdraw",
                                        "type": "string",
                                        "example": "invest"
                                    },
                                    "amount": {
                                        "type": "number",
                                        "example": "3000.00"
                                    },
                                    "investment_id": {
                                        "type": "integer"
                                    },
                                    "transaction_date": {
                                        "type": "string",
                                        "example": "2021-12-16 06:51:44"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/transaction/show": {
            "get": {
                "tags": [
                    "Transaction"
                ],
                "summary": "Show User Transactions by Investment Investment",
                "operationId": "showUserTransactions",
                "parameters": [
                    {
                        "name": "investmentId",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "rowPerPage",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/transaction/expected-balance": {
            "get": {
                "tags": [
                    "Transaction"
                ],
                "summary": "Show User expected balance by Investment Investment",
                "operationId": "showUserExpectedBalance",
                "parameters": [
                    {
                        "name": "investmentId",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Registro de novos usuarios",
                "operationId": "registerUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "danilo@coderockr.com"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "Danilo"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login usuarios",
                "operationId": "loginUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "danilo@coderockr.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        }
    },
    "components": {
        "links": {
            "https://github.com/danilobol/backend-test/blob/development/Tutorial.pdf": {
                "$ref": "Tutorial"
            }
        },
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "security": [
        []
    ]
}